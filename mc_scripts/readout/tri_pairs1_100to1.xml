<!--Run with runjob.sh-->
<Request>
	<Variable name="ebeam" value="1pt1"/>
	<Name name="readout_tri_pairs1_${ebeam}"/>
	<Project name="hps"/>
	<Track name="simulation"/>
	<Email email="btu29@wildcats.unh.edu" request="false" job="true" />
    <Memory space="5096" unit="MB"/>
    <TimeLimit time="3" unit="hours"/>
	<OS name="centos65"/>
	<Variable name="hps-java" value="/u/group/hps/hps_soft/hps-java/hps-distribution-3.5-20160124.015630-32-bin.jar"/>
	<!--	<Variable name="lcio" value="/u/group/hps/hps_soft/lcio/jarfiles/lcio-2.4.4-SNAPSHOT-bin.jar"/> -->
	<Variable name="detector" value="HPS-EngRun2015-Nominal-v3-4-fieldmap"/>
    <Variable name="log_dir" value="file:/work/hallb/hps/mc_production/pass4/logs/readout/tri"/>
    <Variable name="dq_dir" value="file:/work/hallb/hps/mc_production/pass4/data_quality/readout/tri"/>
    <Variable name="out_dir" value="mss:/mss/hallb/hps/production/pass4/readout/tri"/>
	<Variable name="out_file" value="triv2_1to1"/>
	<Variable name="steering" value="EngineeringRun2015TrigPairs1_Pass2.lcsim"/>
	<Variable name="tag" value="3.5-20160124.015630-32"/>
	<Variable name="trigger" value="pairs1"/>
	<List name="num">1</List>
	<ForEach list="num">
		<Job>
            <Input src="mss:/mss/hallb/hps/production/pass4/slic/tri/${ebeam}/triv2_${detector}_${num}.slcio" dest="in_${num}.slcio" />
			<!--<Input src="mss:/mss/hallb/hps/production/slic/tri/${ebeam}/triv2_${detector}_${file1}.slcio" dest="in_${file1}.slcio" />-->
			<Command><![CDATA[
              #  set inputfiles=`ls -v *.slcio| awk '{printf " "$1}'`
                ln -s /u/group/hps/hps_soft/fieldmaps fieldmap
				echo "Auger ID: $AUGER_ID"
                /usr/bin/time /apps/scicomp/java/jdk1.7/bin/java -DdisableSvtAlignmentConstants -XX:+UseSerialGC -Xmx100m -cp ${hps-java} org.hps.users.meeg.FilterMCBunches -e250 in_${num}.slcio tri_filt.slcio -d -E0.05 -w20000000

               echo "/usr/bin/time /apps/scicomp/java/jdk1.7/bin/java  -DdisableSvtAlignmentConstants  -XX:+UseSerialGC -Xmx500m -jar ${hps-java} -r /org/hps/steering/readout/${steering} -Dout    putFile=out  tri_filt.slcio"
               /usr/bin/time /apps/scicomp/java/jdk1.7/bin/java -DdisableSvtAlignmentConstants -XX:+UseSerialGC -Xmx500m -jar ${hps-java} -r /org/hps/steering/readout/${steering} -i tri_filt.slcio -DoutputFile=out -Ddetector=${detector} -Drun=5772
               /usr/bin/time /apps/scicomp/java/jdk1.7/bin/java -XX:+UseSerialGC -Xmx500m -jar ${hps-java} -r /org/hps/steering/production/DataQuality_Pass2.lcsim -i out.slcio > data_quality.txt
				]]></Command>
			<Output src="out.slcio" dest="${out_dir}/${ebeam}/${out_file}_${detector}_${tag}_${trigger}_${num}.slcio"/>
			<Output src="data_quality.txt" dest="${dq_dir}/${ebeam}/${out_file}_${detector}_${tag}_${trigger}_${num}.txt"/>
            <!--<Output src="out_triggerPlots.aida" dest="${dq_dir}/${ebeam}/${out_file}_${num}_triggerPlots.aida"/>-->
			<Output src="out.triggers" dest="${dq_dir}/${ebeam}/${out_file}_${detector}_${tag}_${trigger}_${num}.triggers"/>
			<Stderr dest="${log_dir}/${ebeam}/${out_file}_${detector}_${tag}_${trigger}_${num}.err" />
			<Stdout dest="${log_dir}/${ebeam}/${out_file}_${detector}_${tag}_${trigger}_${num}.out" />
		</Job>
	</ForEach>
</Request>
