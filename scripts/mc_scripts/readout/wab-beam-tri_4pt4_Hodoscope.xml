<!--Run with runjob_100to1.sh -->
<Request>
	<Variable name="ebeam" value="1pt1"/>
    <Name name="readout_wab-beam-tri_${trigger}_${ebeam}"/>
	<Project name="hps"/>
	<Track name="debug"/>
	<Email email="btu29@wildcats.unh.edu" request="false" job="true" />
	<Memory space="3000" unit="MB"/>
        <!--<TimeLimit time="12" unit="hours"/>-->
	<OS name="centos7"/>
    <!--<Variable name="hps-java" value="/u/group/hps/hps_soft/hps-java/hps-distribution-3.10-20160927.161313-69-bin.jar"/>-->
    <Variable name="hps-java" value="/u/group/hps/hps_soft/git/hps-java/distribution/target/hps-distribution-3.11-SNAPSHOT-bin.jar"/>
    <Variable name="log_dir" value="file:/volatile/hallb/hps/logDump/Hodoscope/logs/readout/wab-beam-tri"/>
    <Variable name="dq_dir" value="file:/work/hallb/hps/mc_production/logs/Hodoscope/data_quality/readout/wab-beam-tri"/>
    <!--<Variable name="out_dir" value="mss:/mss/hallb/hps/production/Hodoscope/readout/wab-beam-tri"/>-->
    <Variable name="out_dir" value="file:/work/hallb/hps/mc_production/test/WBT_Hodo/readout"/>
    <!--<Variable name="detector"  value="HPS-EngRun2015-Nominal-v5-0-fieldmap"/>-->
    <Variable name="detector"  value="HPS-PhysicsRun2016-Hodoscope-v0-0-fieldmap"/>
    <!--<Variable name="detector"  value="HPS-EngRun2015-1_5mm-v4-4-fieldmap"/>-->
    <!--<Variable name="detector" value="HPS-EngRun2015-2mm-v1"/>-->
    <Variable name="out_file" value="wabv3SF-egsv5-triv2MG5-noHad_10to1"/>
    <!--<Variable name="tag"   value="3.10-SNAPSHOT_7-13-16"/>-->
    <Variable name="tag"   value="3.11-2017Apr05"/>
    <Variable name="trigger" value="pairs1"/>
    <Variable name="run" value="7984"/>
    <!--<Variable name="trigger" value="singles1"/>-->
    <!--<Variable name="steering" value="EngineeringRun2015TrigPairs1_Pass2.lcsim"/>-->
    <!--<Variable name="steering" value="/u/group/hps/production/mc/EngRun2015Scripts/EngineeringRun2015TrigPairs1_DBGains.lcsim"/>-->
    <Variable name="steering" value="/u/group/hps/production/mc/EngRun2015Scripts/Loose4pt4Pairs1.lcsim"/>
	<List name="num">1</List>
	<ForEach list="num">
		<Job>
            <Input src="file:/work/hallb/hps/mc_production/test/WBT_Hodo/4pt4/wabv3SF_E0pt5GeV-egsv5-triv2MG5_ESum2GeV-g4v1_${detector}_${file1}.slcio" dest="in_${file1}.slcio" /> 
			<Command><![CDATA[
				set inputfiles=`ls -v *.slcio| awk '{printf " -i "$1}'`
				ln -s /u/group/hps/hps_soft/fieldmaps fieldmap
				echo "Auger ID: $AUGER_ID"
                echo "/usr/bin/time /apps/scicomp/java/jdk1.7/bin/java -DdisableSvtAlignmentConstants -XX:+UseSerialGC -Xmx500m -jar ${hps-java} ${steering} $inputfiles -DoutputFile=out"
                
                /usr/bin/time /apps/scicomp/java/jdk1.7/bin/java -DdisableSvtAlignmentConstants -XX:+UseSerialGC -Xmx500m -jar ${hps-java} ${steering} $inputfiles -DoutputFile=out -Ddetector=${detector} -Drun=${run}
                
                #/usr/bin/time /apps/scicomp/java/jdk1.7/bin/java -DdisableSvtAlignmentConstants -XX:+UseSerialGC -Xmx500m -jar ${hps-java} -r /org/hps/steering/readout/${steering} $inputfiles -DoutputFile=out -Ddetector=${detector} -Drun=1000000
                
                /usr/bin/time /apps/scicomp/java/jdk1.7/bin/java -DdisableSvtAlignmentConstants -XX:+UseSerialGC -Xmx500m -jar ${hps-java} -r /org/hps/steering/production/DataQuality.lcsim -i out.slcio > data_quality.txt
				ls -ltr
				]]></Command>
			<Output src="out.slcio" dest="${out_dir}/${ebeam}/${tag}/${out_file}_${detector}_${tag}_run${run}_${trigger}_${num}.slcio"/>
			<Output src="data_quality.txt" dest="${dq_dir}/${ebeam}/${tag}/${out_file}_${detector}_${tag}_run${run}_${trigger}_${num}.txt"/>
            <Output src="out.root" dest="${dq_dir}/${ebeam}/${tag}/${out_file}_${detector}_${tag}_run${run}_${num}_${trigger}_triggerPlots.root"/>
            <!--<Output src="out.triggers.${trigger}" dest="${dq_dir}/${ebeam}/${out_file}_${trigger}_${num}.triggers.${trigger}"/>-->
			<Stderr dest="${log_dir}/${ebeam}/${tag}/${out_file}_${detector}_${tag}_run${run}_${trigger}_${num}.err" />
			<Stdout dest="${log_dir}/${ebeam}/${tag}/${out_file}_${detector}_${tag}_run${run}_${trigger}_${num}.out" />
		</Job>
	</ForEach>
</Request>
